<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Base application theme -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- Add this for outlined button border color -->
<!--        <item name="colorOnSurface">@color/your_outline_color</item>-->
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bottom_sheet_background</item>
    </style>

    <style name="CircleImageStyle">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

    <style name="CurvedBottomOverlay" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeBottomLeft">80dp</item>
        <item name="cornerSizeBottomRight">80dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeTopRight">0dp</item>
    </style>

    <!-- Outlined Button Style -->
    <style name="OutlinedButtonStyle" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">#E8E6EA</item>
        <item name="android:textColor">#000000</item>
        <item name="android:backgroundTint">@color/float_transparent</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
    </style>

    <style name="OtpBoxStyle">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_margin">6dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textColor">@android:color/darker_gray</item>
        <item name="android:background">@drawable/bg_otp_inactive</item>
    </style>

    <style name="CustomAlertDialog" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="SlideInTopAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_top</item>
    </style>
    <style name="MatchDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/scale_in_notify</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>
    <style name="BirthdayPickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>

    <style name="ProfileTag">
        <item name="android:layout_margin">6dp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
        <item name="android:background">@drawable/tag_background</item>
        <item name="android:textColor">#000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
    <style name="RoundedCornerImage">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">16dp</item>
    </style>

    <style name="SettingsTitle">
        <item name="android:textSize">28sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="SettingsSectionTitle">
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">?attr/colorOnSurface</item>
    </style>
    <style name="SettingsOption">
        <item name="android:textSize">18sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">8dp</item>
        <item name="android:elevation">2dp</item>
        <item name="android:clickable">true</item>
        <item name="android:focusable">true</item>
    </style>


        <style name="CustomDialogAnimation">
            <item name="android:windowEnterAnimation">@anim/dialog_enter</item>
            <item name="android:windowExitAnimation">@anim/dialog_exit</item>
        </style>

    <style name="CustomAlertDialogTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog">
        <item name="colorSurface">@color/alert</item>
        <item name="colorSurfaceVariant">@color/alert</item>
        <item name="android:windowBackground">@color/alert</item>
        <item name="android:colorBackground">@color/alert</item>
        <item name="materialAlertDialogBodyTextStyle">@style/CustomDialogBodyText</item>
        <item name="materialAlertDialogTitleTextStyle">@style/CustomDialogTitleText</item>
        <item name="buttonBarButtonStyle">@style/CustomDialogButton</item>
        <item name="android:buttonBarStyle">@style/CustomButtonBar</item>
    </style>

    <style name="CustomDialogBodyText" parent="MaterialAlertDialog.Material3.Body.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomDialogTitleText" parent="MaterialAlertDialog.Material3.Title.Text">
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CustomDialogButton" parent="Widget.Material3.Button.TextButton.Dialog">
        <item name="android:textColor">#8B5A96</item> <!-- Purple color for buttons -->
        <item name="backgroundTint">@color/alert</item>
        <item name="rippleColor">#E0E0E0</item>
    </style>

    <style name="CustomButtonBar" parent="@android:style/Holo.ButtonBar.AlertDialog">
        <item name="android:background">@color/alert</item>
    </style>

</resources>